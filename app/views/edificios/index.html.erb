<%= render 'layouts/menu_vertical' %>

<div class="container col-10 mt-5">
  <p id="notice"><%= notice %></p>
  <% if flash[:error_edificio] %>
      <div class="alert alert-warning" role="alert">
          <%= flash[:error_edificio] %>
      </div>
  <% end %> 
 
 <div class="col-12">
  <h1>Edificios</h1>
      <table class="table table-striped table-hover mt-4">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Dirección</th>
          <th>Ciudad</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @edificios.each do |edificio| %>
          <tr>
            <td><%= edificio.nombre %></td>
            <td><%= edificio.direccion %></td>
            <td><%= edificio.ciudad %></td>
            <td><%= link_to 'Mostrar', edificio, class: 'btn btn-info btn-sm text-white' %></td>
            <td><%= link_to 'Editar', edit_edificio_path(edificio), class: 'btn btn-warning btn-sm text-white' %></td>

            <td><%= link_to 'Eliminar', edificio, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger btn-sm text-white'%>
            </td>
          </tr>
      <% end %>
     </tbody> 
    </table>
</div>